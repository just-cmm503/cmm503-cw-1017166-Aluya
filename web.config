<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <rewrite>
            <rewriteMaps>
                <rewriteMap name="/" defaultValue="public">
                </rewriteMap>
                <rewriteMap name="azure hosted">
                    <add key="*.net" value="*.net/public" />
                </rewriteMap>
            </rewriteMaps>
            <outboundRules>
                <preConditions>
                    <preCondition name="ResponseIsHtml1">
                        <add input="{RESPONSE_CONTENT_TYPE}" pattern="^text/html/php" />
                    </preCondition>
                </preConditions>
            </outboundRules>
            <rules>
                <rule name="Rewrite rule1 for *.net">
                    <match url=".*" />
                    <conditions>
                        <add input="{local.man:{REQUEST_URI}}" pattern="(.+)" />
                    </conditions>
                    <action type="Rewrite" url="{C:1}" appendQueryString="false" />
                </rule>
            </rules>
        </rewrite>
    </system.webServer>
</configuration>



